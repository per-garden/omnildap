.row
  .col-md-6
    .panel.panel-default
      .panel-heading
        Name:
        %strong
          = @backend.name_string
      %ul.well-list{:style => "margin: 0; padding: 0; list-style: none;"}
        %li.well-sm
          %span.light Description:
          %strong
            = @backend.description || ''
        %li.well-sm
          %span.light Email pattern:
          %strong
            = @backend.email_pattern
        %li.well-sm
          %span.light Blocked:
          %strong
            = @backend.blocked
  = render 'backend'
